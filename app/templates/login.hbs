<header>
		<nav class="navbar bg-light">
				<a class="navbar-brand text-dark" >LIBRARY WEB APP</a>
				<div class="navbar-nav flex-row">
				      {{#link-to "signup" class="btn-lg"}}
				        Sign Up
				      {{/link-to}}
				</div>
		</nav>
</header>
<div class="container-fluid">
		<div class="mt-5 row justify-content-md-center">
				<div class="col col-sm-12 col-md-4">
						<div>
								<h1 class="display-4 text-center">
										Login
								</h1>
								<div class="form">
										<div class="form-group">
												<label for="email">Email address</label>
												{{input type="email" class="form-control" value=email placeholder="Enter email"}}
										</div>
										<div class="form-group">
												<label for="password">Password</label>
												{{input type="password" class="form-control" value=password placeholder="Password"}}
										</div>
										<center>
												<button {{action "toggleSignIn"}} class="btn btn-lg btn-success">Sign In</button>
			
												<button {{action "sendPasswordReset"}} class="btn btn-lg btn-danger">Reset Password</button>
										</center>
										<hr>
								</div>
						</div>
				</div>
		</div>
</div>